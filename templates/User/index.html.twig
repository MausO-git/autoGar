{% extends 'base.html.twig' %}

{% block title %}Page de {{ user.fullName }}{% endblock %}

{% block body %}
    <div class="container full">
        <div class="row align-items-center mb-3">
            <div class="col-sm-3 text-center">
                {% if user.picture %}
                    <img src="/uploads/{{user.picture}}" alt="Avatar de {{user.fullName}}" class="avatar mb-3">
                {% else %}
                    <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcT7Kjkv5caLvyvExCDMMPWEupO5ODKwhFZ9LQ&s" alt="Avatar de {{user.fullName}}" class="avatar mb-3">
                {% endif %}
            </div>
            <div class="col-sm-9">
                <h1>{{user.fullName}}</h1>
                {# app.user donne accès à l'utilisateur connecté #}
                {% if user is same as (app.user) %}
                    <div class="mt-3">
                        <a href="{{path('account_update')}}" class="btn btn-primary mr-2 mb-2">Modifier mes information</a>
                        <a href="{{path('account_password')}}" class="btn btn-primary mb-2">Modifier mon mot de passe</a>
                        <a href="{{path('account_imgupdate')}}" class="btn btn-primary mb-2">Modifier mon avatar</a>
                        <a href="{{path('account_delimg')}}" class="btn btn-danger mb-2">Supprimer mon avatar</a>
                    </div>
                {% endif %}
            </div>
        </div>
        {{user.description | raw | nl2br }}
        <hr>
    </div>
{% endblock %}
